@model Academy.Mentors.Models.Paper
@{
	var urlTemplate = Url.Action() + "?" + @ViewData["returnField"] + "={0}";
	var request = ViewContext.HttpContext.Request;
	foreach (var key in request.Query.Keys)
	{
		if (key == "paperId") { continue; }
		urlTemplate += "&" + key + "=" + request.Query[key];
	}
}
<a class="btn btn-default" href='~/Papers/Select/?selectedId=@Model.Id&referred="@urlTemplate"&contributorId=@ViewData["contributorId"]&auditEnteredBy=@ViewData["auditEnteredBy"]&auditUpdatedBy=@ViewData["auditUpdatedBy"]'>Select</a>
